  "license": "Apache-2.0",
  "repository": "mrvautin/react-shoppingcart",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
